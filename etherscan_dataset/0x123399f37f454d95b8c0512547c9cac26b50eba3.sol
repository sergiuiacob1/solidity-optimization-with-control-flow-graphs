pragma solidity 0.8.9;









contract LPStaking is
    ReentrancyGuardUpgradeable,
    PausableUpgradeable,
    AccessControlMixinUpgradeable,
    NativeMetaTransaction,
    ContextMixin
{
    using SafeMathUpgradeable for uint256;

    bytes32 public constant REWARD_ADMIN_ROLE = keccak256("REWARD_ADMIN_ROLE");

    /* ========== STATE VARIABLES ========== */

    IERC20 public rewardsToken;
    IERC20 public stakingToken;
    uint256 public periodFinish;
    uint256 public rewardRate;
    uint256 public rewardsDuration;
    uint256 public lastUpdateTime;
    uint256 public rewardPerTokenStored;

    mapping(address => uint256) public userRewardPerTokenPaid;
    mapping(address => uint256) public rewards;

    uint256 private _totalSupply;
    mapping(address => uint256) private _balances;
    mapping(address => uint256) private _withdrawTimes;

    address payable private _bank;
    uint256 public depositFee;
    uint256 public slashingFee;
    uint256 public withdrawalPeriod;

    /* ========== CONSTRUCTOR ========== */

    function initialize(
        address rewardsToken_,
        address stakingToken_,
        address payable bank,
        uint256 depositFee_,
        uint256 slashingFee_,
        uint256 withdrawalPeriod_
    ) public initializer {
        __ReentrancyGuard_init();
        rewardsToken = IERC20(rewardsToken_);
        stakingToken = IERC20(stakingToken_);
        _bank = bank;
        depositFee = depositFee_;
        slashingFee = slashingFee_;
        withdrawalPeriod = withdrawalPeriod_;
        periodFinish = 0;
        rewardRate = 0;
        rewardsDuration = 30 days + 12 hours;
        _setupRole(REWARD_ADMIN_ROLE, _msgSender());
        _setupRole(DEFAULT_ADMIN_ROLE, _msgSender());
    }

    /* ========== MODIFIERS ========== */

    modifier onlyWhenWithdrawing(address user) {
        require(
            _withdrawTimes[user] > 0,
            "LPStaking: User isn't withdrawing LP"
        );
        _;
    }

    modifier onlyWhenNotWithdrawing(address user) {
        require(_withdrawTimes[user] == 0, "LPStaking: User is withdrawing LP");
        _;
    }

    /* ========== VIEWS ========== */

    function totalSupply() external view returns (uint256) {
        return _totalSupply;
    }

    function balanceOf(address account) external view returns (uint256) {
        return _balances[account];
    }

    function withdrawTime(address user) public view returns (uint256) {
        return _withdrawTimes[user];
    }

    function lastTimeRewardApplicable(address user) public view returns (uint256) {
        uint256 lastTimeApplicable = MathUpgradeable.min(block.timestamp, periodFinish);
        if (_withdrawTimes[user] == 0) {
            return lastTimeApplicable;
        }
        return MathUpgradeable.min(lastTimeApplicable, _withdrawTimes[user] - withdrawalPeriod);
    }

    function rewardPerToken(address account) public view returns (uint256) {
        if (_totalSupply == 0) {
            return rewardPerTokenStored;

        }
        return
            rewardPerTokenStored.add(
                lastTimeRewardApplicable(account).sub(lastUpdateTime).mul(rewardRate).mul(1e18).div(_totalSupply)
            );
    }

    function earned(address account) public view returns (uint256) {
        return
            _balances[account]
                .mul(rewardPerToken(account).sub(userRewardPerTokenPaid[account]))
                .div(1e18)
                .add(rewards[account]);
    }

    function getRewardForDuration() external view returns (uint256) {
        return rewardRate.mul(rewardsDuration);
    }

    function stakeWithPermit(
        uint256 amount,
        uint256 deadline,
        uint8 v,
        bytes32 r,
        bytes32 s
    )
        external
        payable
        nonReentrant
        whenNotPaused
        updateReward(_msgSender())
        onlyWhenNotWithdrawing(_msgSender())
    {
        require(msg.value == depositFee, "LPStaking: Wrong deposit fee");
        require(amount > 0, "Cannot stake 0");
        _totalSupply = _totalSupply.add(amount);
        _balances[_msgSender()] = _balances[_msgSender()].add(amount);

        // permit
        IUniswapV2ERC20(address(stakingToken)).permit(
            _msgSender(),
            address(this),
            amount,
            deadline,
            v,
            r,
            s
        );

        stakingToken.transferFrom(_msgSender(), address(this), amount);
        (bool sent, bytes memory data) = _bank.call{value: depositFee}("");
        require(sent, "Failed to send Ether");
        emit Staked(_msgSender(), amount);
    }

    function stake(uint256 amount)
        external
        payable
        nonReentrant
        whenNotPaused
        updateReward(_msgSender())
        onlyWhenNotWithdrawing(_msgSender())
    {
        require(msg.value == depositFee, "LPStaking: Wrong deposit fee");
        require(amount > 0, "Cannot stake 0");
        _totalSupply = _totalSupply.add(amount);
        _balances[_msgSender()] = _balances[_msgSender()].add(amount);
        stakingToken.transferFrom(_msgSender(), address(this), amount);
        (bool sent, bytes memory data) = _bank.call{value: depositFee}("");
        require(sent, "Failed to send Ether");
        emit Staked(_msgSender(), amount);
    }

    function withdrawImmediately(uint256 amount)
        public
        nonReentrant
        whenNotPaused
        updateReward(_msgSender())
    {
        require(amount > 0, "Cannot withdraw 0");
        uint256 fee = (amount / 100) * slashingFee;
        _totalSupply = _totalSupply.sub(amount);
        _balances[_msgSender()] = _balances[_msgSender()].sub(amount);
        _withdrawTimes[_msgSender()] = 0;
        stakingToken.transfer(_msgSender(), amount - fee);
        stakingToken.transfer(_bank, fee);
        emit Withdrawn(_msgSender(), amount);
    }

    function initializeWithdrawal()
        public
        nonReentrant
        whenNotPaused
        updateReward(_msgSender())
        onlyWhenNotWithdrawing(_msgSender())
    {
        _withdrawTimes[_msgSender()] = block.timestamp + withdrawalPeriod;
        emit WithdrawInitialized(_msgSender());
    }

    function executeWithdrawal()
        public
        nonReentrant
        whenNotPaused
        updateReward(_msgSender())
        onlyWhenWithdrawing(_msgSender())
    {
        require(
            withdrawTime(_msgSender()) <= block.timestamp,
            "LPStaking: Cannot withdraw yet"
        );
        uint256 amount = _balances[_msgSender()];
        _totalSupply = _totalSupply.sub(amount);
        _balances[_msgSender()] = _balances[_msgSender()].sub(amount);
        _withdrawTimes[_msgSender()] = 0;
        stakingToken.transfer(_msgSender(), amount);
        emit WithdrawExecuted(_msgSender());
    }

    function getReward()
        public
        nonReentrant
        whenNotPaused
        updateReward(_msgSender())
    {
        uint256 reward = rewards[_msgSender()];
        if (reward > 0) {
            rewards[_msgSender()] = 0;
            rewardsToken.transfer(_msgSender(), reward);
            emit RewardPaid(_msgSender(), reward);
        }
    }

    function exitImmediately() external whenNotPaused {
        withdrawImmediately(_balances[_msgSender()]);
        getReward();
    }

    function exit() external {
        executeWithdrawal();
        getReward();
    }

    function pause() external only(DEFAULT_ADMIN_ROLE) {
        _pause();
    }

    function unpause() external only(DEFAULT_ADMIN_ROLE) {
        _unpause();
    }

    /* ========== RESTRICTED FUNCTIONS ========== */

    function notifyRewardAmount(uint256 reward)
        external
        only(REWARD_ADMIN_ROLE)
        whenNotPaused
        updateReward(address(0))
    {
        if (block.timestamp >= periodFinish) {
            rewardRate = reward.div(rewardsDuration);
        } else {
            uint256 remaining = periodFinish.sub(block.timestamp);
            uint256 leftover = remaining.mul(rewardRate);
            rewardRate = reward.add(leftover).div(rewardsDuration);
        }

        // Ensure the provided reward amount is not more than the balance in the contract.
        // This keeps the reward rate in the right range, preventing overflows due to
        // very high values of rewardRate in the earned and rewardsPerToken functions;
        // Reward + leftover must be less than 2^256 / 10^18 to avoid overflow.
        uint256 balance = rewardsToken.balanceOf(address(this));
        require(
            rewardRate <= balance.div(rewardsDuration),
            "Provided reward too high"
        );

        lastUpdateTime = block.timestamp;
        periodFinish = block.timestamp.add(rewardsDuration);
        emit RewardAdded(reward);
    }

    // End rewards emission earlier
    function updatePeriodFinish(uint256 timestamp)
        external
        only(REWARD_ADMIN_ROLE)
        whenNotPaused
        updateReward(address(0))
    {
        periodFinish = timestamp;
    }

    // Added to support recovering LP Rewards from other systems such as BAL to be distributed to holders
    function recoverERC20(address tokenAddress, uint256 tokenAmount)
        external
        only(DEFAULT_ADMIN_ROLE)
    {
        require(
            tokenAddress != address(stakingToken),
            "Cannot withdraw the staking token"
        );
        IERC20(tokenAddress).transfer(address(this), tokenAmount);
        emit Recovered(tokenAddress, tokenAmount);
    }

    function setRewardsDuration(uint256 _rewardsDuration)
        external
        only(REWARD_ADMIN_ROLE)
    {
        require(
            block.timestamp > periodFinish,
            "Previous rewards period must be complete before changing the duration for the new period"
        );
        rewardsDuration = _rewardsDuration;
        emit RewardsDurationUpdated(rewardsDuration);
    }

    function setBank(address payable bank)
        external
        only(DEFAULT_ADMIN_ROLE)
    {
        _bank = bank;
    }

    function setRewardsToken(address rewardsToken_)
        external
        only(DEFAULT_ADMIN_ROLE)
    {
        rewardsToken = IERC20(rewardsToken_);
    }

    function setStakingToken(address stakingToken_)
        external
        only(DEFAULT_ADMIN_ROLE)
    {
        stakingToken = IERC20(stakingToken_);
    }


    function setDepositFee(uint256 depositFee_)
        external
        only(REWARD_ADMIN_ROLE)
    {
        depositFee = depositFee_;
    }

    function setSlashingFee(uint256 slashingFee_)
        external
        only(REWARD_ADMIN_ROLE)
    {
        slashingFee = slashingFee_;
    }

    function setWithdrawalPeriod(uint256 withdrawalPeriod_)
        external
        only(REWARD_ADMIN_ROLE)
    {
        withdrawalPeriod = withdrawalPeriod_;
    }

    /* ========== MODIFIERS ========== */

    modifier updateReward(address account) {
        rewardPerTokenStored = rewardPerToken(account);
        lastUpdateTime = lastTimeRewardApplicable(account);
        if (account != address(0)) {
            rewards[account] = earned(account);
            userRewardPerTokenPaid[account] = rewardPerTokenStored;
        }
        _;
    }

    /* ========== EVENTS ========== */

    event RewardAdded(uint256 reward);
    event Staked(address indexed user, uint256 amount);
    event Withdrawn(address indexed user, uint256 amount);
    event WithdrawInitialized(address indexed user);
    event WithdrawExecuted(address indexed user);
    event RewardPaid(address indexed user, uint256 reward);
    event RewardsDurationUpdated(uint256 newDuration);
    event Recovered(address token, uint256 amount);
}