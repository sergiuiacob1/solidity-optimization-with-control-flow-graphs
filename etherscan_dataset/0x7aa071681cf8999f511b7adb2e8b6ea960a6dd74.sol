        address _earthFundToken,
        address payable _treasury
    ) {
        require(_earthFundToken != address(0));
        earthFundToken = _earthFundToken;

        require(_treasury != address(0));
        treasury = _treasury;
    }

    /**
     * @notice Initialize a new Bond pair that users can purchase
     * @param _bondName         The name of the new bond
     * @param _startingPrice    Starting price for 1 1EARTH token, in the base currency's smallest denomination. For example,
     *                          a starting price of 35730000000000 on a "1EARTH-ETH" pair means that it costs 0.00003573 ETH for 1 1EARTH token
     *
     * @param _minimumPrice     The lowest a bond's price can decay to, in the base currency's lowest denomination
     * @param _decimals         How many decimals the currency formats with (18 for ETH, etc.)
     * @param _vestingTerm      How long the bond must vest for the user to get their full 1EARTH reward, in blocks
     * @param _incrementRate    How much a bond's price increases by everytime someone bonds, in the base currency's lowest denomination
     * @param _decrementRate    How much a bond's price decreases every block after the buffer, in the base currency's lowest denomination
     * @param _buffer           A delay, in blocks, before a bond's price starts to decay
     *
     * @param _maxPayout        The maximum amount of 1EARTH, in a percent, that a user can be rewarded. This is used to prevent small parties from
     *                          receiving all of the 1EARTH in the contract in a handeful of transactions
     *
     * @param _isErc20          Boolean expressing whether the base token is an ERC20 token or not
     * @param _tokenAddress     Address of the base currency, if needed. If ETH, this will be address(0)
     */
    function initializeNewBondTerm(
        string calldata _bondName,
        uint256 _startingPrice,
        uint256 _minimumPrice,
        uint256 _decimals,
        uint256 _vestingTerm,
        uint256 _incrementRate,
        uint256 _decrementRate,
        uint256 _buffer,
        uint256 _maxPayout,
        bool _isErc20,
        address _tokenAddress
    ) external onlyOwner {
        // The price of the bond should increase faster than it deays
        require(
            _incrementRate > _decrementRate,
            "Bonding: Increment rate should be higher than decrement rate"
        );

        bondPairs.push(
            BondPair({
                name: _bondName,
                active: 1,
                currentPrice: _startingPrice,
                minimumPrice: _minimumPrice,
                decimals: _decimals,
                lastDecay: block.number,
                buffer: _buffer,
                incrementRate: _incrementRate,
                decrementRate: _decrementRate,
                vestingTerm: _vestingTerm,
                maxPayout: _maxPayout
            })
        );

        if (_isErc20) {
            erc20TokensAddresses[_bondName] = _tokenAddress;
        }
    }

    /**
        @dev Calculates a bond's most up to date price by taking time decay into account
        @return uint256 The bond's current price, in the base currency's lowest denomination
    */
    function bondPrice(uint256 _bondIndex) public view returns (uint256) {
        BondPair memory bond = bondPairs[_bondIndex];

        // Calculate the time, in blocks, since last purchase
        uint256 blocksElapsed = block.number - bond.lastDecay;

        // If the bond has been purchased recently to where the buffer doesn't apply,
        // return the price that is saved to the bond currently
        if (blocksElapsed <= bond.buffer) {
            return bond.currentPrice;
        }

        uint256 blockDelta = blocksElapsed.sub(bond.buffer);
        uint256 discount = bond.decrementRate * blockDelta;
        uint256 maxDiscount = bond.currentPrice.sub(bond.minimumPrice);

        // If the total discount is greater than the current price, then
        // we need to set it to the minimum price
        if (discount >= maxDiscount) {
            return bond.minimumPrice;
        }

        return bond.currentPrice.sub(discount);
