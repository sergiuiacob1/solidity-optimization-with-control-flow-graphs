    function redeem(uint256 _bondPairIndex) external returns (bool) {
        Bond memory userBond = bondInfo[msg.sender][_bondPairIndex];
        uint256 percentVested = percentVestedFor(msg.sender, _bondPairIndex); // (blocks since last interaction / vesting term remaining)

        // If the bond is fully vested, send the remaining 1EARTH to the user and remove the bond from
        // our active bonds list
        if (percentVested >= 10000) {
            // if fully vested
            delete bondInfo[msg.sender][_bondPairIndex]; // delete user info
            activeBonds--;

            emit BondRedeemed(msg.sender, userBond.payout, 0); // emit bond data
            return IERC20(earthFundToken).transfer(msg.sender, userBond.payout); // send payout
        } else {
            // Calculate how much the user should receive at this time, send it, and
            // store the updated payout in their bond
            uint256 payout = userBond.payout.mul(percentVested).div(10000);

            // store updated deposit info
            bondInfo[msg.sender][_bondPairIndex] = Bond({
                payout: userBond.payout.sub(payout),
                vesting: userBond.vesting.sub(
                    block.number.sub(userBond.lastBlock)
                ),
                lastBlock: block.number,
                pricePaid: userBond.pricePaid
            });

            emit BondRedeemed(
                msg.sender,
                payout,
                bondInfo[msg.sender][_bondPairIndex].payout
            );
            return IERC20(earthFundToken).transfer(msg.sender, payout); // send payout
        }
