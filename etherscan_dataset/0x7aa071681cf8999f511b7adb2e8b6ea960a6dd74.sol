        uint256 _input
    ) public onlyOwner {
        BondPair storage bond = bondPairs[_bondPairIndex];

        if (_parameter == PARAMETER.VESTING) {
            // 0
            require(_input >= 5760, "Vesting must be longer than 24 hours");
            bond.vestingTerm = _input;
        } else if (_parameter == PARAMETER.MAXPAYOUT) {
            // 1
            bond.maxPayout = _input;
        } else if (_parameter == PARAMETER.INCREMENT) {
            // 2
            bond.incrementRate = _input;
        } else if (_parameter == PARAMETER.DECREMENT) {
            // 3
            bond.decrementRate = _input;
        } else if (_parameter == PARAMETER.BUFFER) {
            // 4
            bond.buffer = _input;
        } else if (_parameter == PARAMETER.ACTIVE) {
            // 5
            bond.active = _input;
        }
    }

    /* ======== INTERNAL HELPER FUNCTIONS ======== */



    /**
     *  @notice Returns the lower of the two values passed in
     *  @param a A uint256
     *  @param b A uint256
     *  @return uint256 
     */
    function min(uint256 a, uint256 b) internal pure returns (uint256) {        
        return a < b ? a : b;    
    }

    /**
     *  @notice Calculate how far into vesting a user's bond is
     *  @param _user The address of the user
     *  @param _bondPairIndex The specific bond to check
     *  @return percentVested_ uint
     */
    function percentVestedFor(address _user, uint256 _bondPairIndex)
        public
        view
        returns (uint256 percentVested_)
    {
        Bond memory bond = bondInfo[_user][_bondPairIndex];
        uint256 blocksSinceLast = block.number.sub(bond.lastBlock);
        uint256 vesting = bond.vesting;

        if (vesting > 0) {
            percentVested_ = blocksSinceLast.mul(10000).div(vesting);
        } else {
            percentVested_ = 0;
        }
    }

    /**
     *  @notice Calculate amount of 1EARTH available for claim
     *  @param _user The user with an active bond
     *  @param _bondPairIndex The specific bond to check
     *  @return pendingPayout_ uint
     */
    function pendingPayoutFor(address _user, uint256 _bondPairIndex)
        external
        view
        returns (uint256 pendingPayout_)
    {
        uint256 percentVested = percentVestedFor(_user, _bondPairIndex);
        uint256 payout = bondInfo[_user][_bondPairIndex].payout;

        if (percentVested >= 10000) {
            pendingPayout_ = payout;
        } else {
            pendingPayout_ = payout.mul(percentVested).div(10000);
        }
    }

    /**
     *  @notice Calculates how much 1EARTH a user will get for a bond
     *  @param _bondPairIndex   The specific bond a user will be interacting with
     *  @param _value           The amount of base currency (ETH, USDT, etc) that the user is paying
     *  @return tokensForPayout The amount of 1EARTH the user would receive
     */
    function payoutFor(uint256 _bondPairIndex, uint256 _value)
        public
        view
        returns (uint256)
    {
        // Fetch the bond as well as that bond's current price
        uint256 price = bondPrice(_bondPairIndex);
        uint256 tokensForPayout = _value.div(price);

        // Multply by 1e18 since that is the number of decimals for 1EARTH
        return tokensForPayout.mul(10**18);
    }

    /**
        @dev Emergency function that will withdraw all 1EARTH from the contract.
    */
    function emergencyWithdraw() public onlyOwner returns (bool) {
        uint256 bondingBalance = IERC20(earthFundToken).balanceOf(
            address(this)
        );
        
        return IERC20(earthFundToken).transfer(msg.sender, bondingBalance);
    }
