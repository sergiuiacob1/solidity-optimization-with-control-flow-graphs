    event BondCreated(
        uint256 deposit,
        uint256 indexed payout,
        uint256 indexed expires,
        uint256 indexed priceInUSD
    );

    // Emitted when a user claims any amount of 1EARTH from a bond
    event BondRedeemed(
        address indexed recipient,
        uint256 payout,
        uint256 remaining
    );

    // Emitted when a bond's price changes due to time decay or from purchases
    event BondPriceChanged(
        uint256 indexed bondIndex,
        uint256 indexed internalPrice,
        uint256 indexed debtRatio
    );

    /* ======== STRUCTS ======== */

    // Defines information about a user's active bond
    struct Bond {
        uint256 payout; // earthFundToken remaining to be paid
        uint256 vesting; // Blocks left to vest
        uint256 lastBlock; // Last interaction
        uint256 pricePaid; // In DAI, for front end viewing
    }

    // Defines information about a bond pair that a user can bond to
    struct BondPair {
        string name; // Currency that user is paying with
        uint256 active; // Bool to see if bonds are accepting deposits
        uint256 currentPrice; // Current price of the bond
        uint256 minimumPrice; // Minimum price of the bond
        uint256 decimals; // Number of decimals to get to the smallest denomination of the base currency
        uint256 lastDecay; // Last block that pair was purchased
        uint256 incrementRate; // Rate to increment in smallest denomination (wei for ETH, etc.)
        uint256 decrementRate; // Rate to increment in smallest denomination (wei for ETH, etc.)
        uint256 vestingTerm; // in blocks
        uint256 maxPayout; // max number of 1EARTH the user can receive, in whole tokens
        uint256 buffer; // How long to wait before adjusting the price, in blocks
    }

    /* ======== STATE VARIABLES ======== */

    address public immutable earthFundToken; // Token given as payment for bond
    address payable public immutable treasury; // EarthFund DAO Treasury address

    BondPair[] public bondPairs; // Stores bond pairs
    uint256 public activeBonds; //  Number of active user bonds with some payout left to distribute

