        // Preliminary checks
        require(msg.sender != address(0), "Invalid address");

        // First, load the bond and validate to make sure it is active, there is enough 1EARTH
        // to support the bond, etc
        BondPair storage currentBondPair = bondPairs[_bondPairIndex];
        require(currentBondPair.active == 1, "Bonding: Bond is not active");

        
        address bondTokenAddress = erc20TokensAddresses[currentBondPair.name];
        if(bondTokenAddress == address(0)) {
            // Because they are paying in ETH, we will update _amountPaid to msg.value
            _amountPaid = msg.value;
        }

        require(_amountPaid > 0, "Bonding: Must send tokens when bonding");

        // Make sure that user is only creating a new bond
        require(
            bondInfo[msg.sender][_bondPairIndex].payout == 0,
            "Bonding: You must fully vest your previous bond before starting another"
        );

        // Calculate how much 1EARTH this bond will reward the user.
        uint256 amountOfRewardedOneEarth = payoutFor(_bondPairIndex, _amountPaid); // payout to bonder is computed

        // Make sure that there is enough 1EARTH in the contract to support this bond
        require(
            amountOfRewardedOneEarth < IERC20(earthFundToken).balanceOf(address(this)),
            "Bonding: Not enough in contract to support bond"
        );

        // Make sure that the amount of 1EARTH the user will receive is not over our max payout limit
        uint256 currentBondPrice = bondPrice(_bondPairIndex);
        require(amountOfRewardedOneEarth <= maxPayout(_bondPairIndex), "Bonding: Bond too large. Please try lowering how much you wish to bond.");

        // Store the user's info
        bondInfo[msg.sender][_bondPairIndex] = Bond({
            payout: bondInfo[msg.sender][_bondPairIndex].payout.add(amountOfRewardedOneEarth),
            vesting: currentBondPair.vestingTerm,
            lastBlock: block.number,
            pricePaid: currentBondPrice
        });

        activeBonds++;

        // Adjust bond decay rate and increase price since this is a purchase
        currentBondPair.lastDecay = block.number;
        uint256 currentPrice = currentBondPair.currentPrice;
        uint256 newBondPrice = currentPrice.add(currentBondPair.incrementRate);
        currentBondPair.currentPrice = newBondPrice;

        // Now that we have validated our info, we can transfer funds to the treasury and create the bond
        if (bondTokenAddress == address(0)) {
            require(
                msg.value >=
                    _amountPaid.div(10**currentBondPair.decimals).mul(
                        currentBondPrice
                    ),
                "Bonding: Not enough sent for bond"
            );

            treasury.transfer(msg.value);
        } else {
            // Token is an ERC20
            require(
                IERC20(bondTokenAddress).balanceOf(msg.sender) >=
                    _amountPaid.div(10**currentBondPair.decimals).mul(
                        currentBondPrice
                    ),
                "Bonding: Not enough sent for bond"
            );

            IERC20(bondTokenAddress).safeTransferFrom(
                msg.sender,
                treasury,
                _amountPaid
            );
        }

        emit BondCreated(
            _amountPaid,
            amountOfRewardedOneEarth,
            block.number.add(currentBondPair.vestingTerm),
            currentBondPair.currentPrice
