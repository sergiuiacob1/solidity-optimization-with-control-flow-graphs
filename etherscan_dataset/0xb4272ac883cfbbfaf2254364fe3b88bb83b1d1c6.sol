pragma solidity 0.8.11;

contract GVODAORewardDistribution is Ownable{
    using SafeMath for uint;

    struct TokenDetail{
        uint256 claimedTokens;
    }

    IERC721 public nftAddress; //GVODAU EC721 addres
    
    IERC20 public rewardToken; //$GVO EC20 addres

    uint public fixedRewardPerBlock = 0.00190972222222222 ether; //1,909,722,222,222,220 Wei OR 0.00190972222222222 ether

    uint public startRewardBlock; // (Block number in the deployed chain closest to the start reward date)
    
    uint256 public lastRampUpRewardBlockDiff = 1036800; // (Approximation of number of blocks in 180 days at 15 sec block interval)
    
    uint256 public lastFixedRewardBlockDiff = 22089600; // (Approximation of number of blocks in 3835 days at 15 sec block interval)
    
    uint public commonDiffForRampUpReward = 6329577864; //value in eth format (Wei)

    mapping(uint256 => uint256) public claimedTokens;

    constructor(IERC721 _nftAddress, IERC20 _tokenAddress, uint256 _startRewardBlock){
        nftAddress = _nftAddress;
        rewardToken = _tokenAddress;
        startRewardBlock = _startRewardBlock;
    }

    function setRewardToken(IERC20 _tokenAddress) public onlyOwner{
        rewardToken = _tokenAddress;
    }

    function setNFTToken(IERC721 _tokenAddress) public onlyOwner{
        nftAddress = _tokenAddress;
    }

    function setStartRewardBlock(uint _startRewardBlock) public onlyOwner{
        startRewardBlock = _startRewardBlock;
    }

    function setFixedRewardPerBlock(uint _fixedRewardPerBlock) public onlyOwner{
        fixedRewardPerBlock = _fixedRewardPerBlock;
    }

    function setCommonDiffForRampUpReward(uint _commonDiffForRampUpReward) public onlyOwner{
        commonDiffForRampUpReward = _commonDiffForRampUpReward;
    }

    function setLastRampUpRewardBlockDiff(uint256 _lastRampUpRewardBlockDiff) public onlyOwner{
        lastRampUpRewardBlockDiff = _lastRampUpRewardBlockDiff; 
    }

    function setLastFixedRewardBlockDiff(uint256 _fixedRewardBlockDiff) public onlyOwner{
        lastFixedRewardBlockDiff = _fixedRewardBlockDiff; // 22089600
    }

    function claim(uint256[] memory _tokenIds) public{
        require(block.number >= startRewardBlock, "Claim has not started yet");

        uint pendingClaimableRewards = 0;
        for(uint i = 0; i < _tokenIds.length; i++){
            require(nftAddress.ownerOf(_tokenIds[i]) == msg.sender, "You are not the owner of one or more token ids passed" );
            uint pendingRewardForThisTokenId = getPendingRewards(_tokenIds[i]);
            pendingClaimableRewards += pendingRewardForThisTokenId;
            claimedTokens[_tokenIds[i]] = claimedTokens[_tokenIds[i]].add(pendingRewardForThisTokenId);        
        }
        require(pendingClaimableRewards > 0, "Claimable reward amount must be greater than zero");

        rewardToken.transfer(msg.sender, pendingClaimableRewards);
    }

    function getPendingRewards(uint256 _tokenId) public view returns(uint256){
        uint rampupReward = getFixedRewardsForBlockNumber(block.number);
        uint fixedReward = getRampUpRewardsForBlockNumber(block.number);
        uint pendingRewards =  fixedReward.add(rampupReward).sub(claimedTokens[_tokenId]);
        return ((pendingRewards < 0) ? 0 : pendingRewards);
    }

    function getFixedRewardsForBlockNumber(uint _blockNumber) public view returns(uint256){
        uint256 blockDiff = (_blockNumber >= startRewardBlock) ? _blockNumber.sub(startRewardBlock) : 0;
        blockDiff =  (blockDiff <= lastFixedRewardBlockDiff) ? blockDiff : lastFixedRewardBlockDiff;  
        return blockDiff.mul(fixedRewardPerBlock);
    }

    function getRampUpRewardsForBlockNumber(uint _blockNumber) public view returns(uint256){
        uint256 blockDiff = (_blockNumber >= startRewardBlock) ? _blockNumber.sub(startRewardBlock) : 0;
        blockDiff = (blockDiff <= lastRampUpRewardBlockDiff) ? blockDiff : lastRampUpRewardBlockDiff;  
        return (blockDiff > 0) ? (blockDiff.mul(blockDiff.sub(1)).mul(commonDiffForRampUpReward.div(2))) : 0;
    }

    function transferAnyERC20Tokens(IERC20 _tokenAddress, uint256 _tokenAmount) public onlyOwner{
        _tokenAddress.transfer(msg.sender, _tokenAmount);
    }
}